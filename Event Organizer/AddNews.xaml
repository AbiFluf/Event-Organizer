<UserControl x:Class="Event_Organizer.AddNews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Event_Organizer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid x:Name="Line" Height="50" VerticalAlignment="Top" Margin="0 0 0 0">
            
        </Grid>
            <TextBox materialdesign:HintAssist.Hint="Add Your News Article"                
                    AcceptsReturn="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
                    Height="270" HorizontalAlignment="Left" Margin="0,50,0,0" x:Name="News" VerticalAlignment="Top" Width="450" />
        <Button Click="SubmitN_Click" Content="Submit" Height="34" HorizontalAlignment="Left" Margin="183,350,0,0" x:Name="SubmitN" VerticalAlignment="Top" Width="137" Background="#FF7C1D88" BorderBrush="#FFB856C9" />
    </Grid>
</UserControl>
